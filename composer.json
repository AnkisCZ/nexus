{
    "name": "mgatner/blademaster",
    "type": "project",
    "description": "Heroes of the Storm simulator for Samuro",
    "homepage": "https://tat.red/blademaster",
    "license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/codeigniter4/codeigniter4"
        },
        {
            "type": "vcs",
            "url": "https://github.com/MGatner/heroes-data"
        },
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
    ],
   "require": {
        "php": ">=7.2",
        "codeigniter4/codeigniter4": "dev-develop",
        "heroestoolchest/heroes-data": "dev-nexus",
        "tatter/assets": "^2.1"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.6.*",
		"mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0",
		"fzaninotto/faker": "^1.9@dev",
		"twbs/bootstrap": "^4.3",
		"components/jquery": "^3.3",
		"fortawesome/font-awesome": "^5.8"
    },
	"autoload-dev": {
		"psr-4": {
			"ProjectTests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
